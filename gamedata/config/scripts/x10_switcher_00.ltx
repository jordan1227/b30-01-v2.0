[logic]
active = ph_button@deactive

[ph_button@deactive]
anim = lab_primary_switcher_off
tooltip = tips_x8_switcher_press_01
on_info={+labx10_lamp_14_off} ph_button@deactivate
on_info2={+labx10_lamp_14_on} ph_button@activate
on_press = ph_button@activate

[ph_button@activate]
anim = lab_primary_switcher_idle 
on_timer = 500 | %=turn_on_obj(4301)% ph_button@activate2

[ph_button@activate2]
anim = lab_primary_switcher_idle 
tooltip = tips_x8_switcher_press_01
on_timer = 500 |%=play_snd_from_obj(4100:ambient\transformer_hum1)%
on_press = ph_button@deactivate  %+labx10_lamp_14_off =sak_spawn.x10_after_switch_rats()%
on_info={+labx10_lamp_14_off} ph_button@deactivate

[ph_button@deactivate]
anim = lab_primary_switcher_off
on_timer = 500 | %=stop_play_snd_from_obj(4100:ambient\transformer_hum1) =turn_off_obj(4301)% ph_button@deactivate2

[ph_button@deactivate2]
anim = lab_primary_switcher_off
tooltip = tips_x8_switcher_press_01
on_press = ph_button@activate  %=play_snd_from_obj(4100:device\power_switch) +labx10_lamp_14_on%
on_info={+labx10_lamp_14_on} ph_button@activate