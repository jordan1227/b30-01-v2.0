[logic]
active = ph_door@close

[ph_door@locked]
locked = true
closed = true
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
hit_on_bone = 2|ph_door@open
tip_open = tip_gate_locked

[ph_door@close]
locked = false
closed = true
on_use = ph_door@open
;hit_on_bone = 1|ph_door@free|2|ph_door@free
tip_open = tip_gate_open

[ph_door@open]
locked = false
closed = false
on_use = ph_door@close
tip_close = tip_gate_close
;hit_on_bone = 1|ph_door@free|2|ph_door@free

[ph_door@free]
locked = false
closed = true
no_force = true
on_use = ph_door@open