[logic]
active = ph_button@deactive

[ph_button@deactive]
anim = lab_primary_switcher_off
tooltip = tips_x8_switcher_press_08
on_info={+labx18_lamp_8_off} ph_button@deactivate2
on_info2={+labx18_lamp_8_on} ph_button@activate2
on_press = ph_button@activate  %=play_snd_from_obj(5113:ambient\switch_1)%

[ph_button@activate]
anim = lab_primary_switcher_idle 
on_timer = 500 | %=turn_on(5120) =turn_on(5121) =turn_on(5180) =turn_on(5184)% ph_button@activate2

[ph_button@activate2]
anim = lab_primary_switcher_idle 
tooltip = tips_x8_switcher_press_01
