on_press = ph_button@deactivate  %=play_snd_from_obj(5113:ambient\switch_1) +labx18_lamp_8_off%

[ph_button@deactivate]
anim = lab_primary_switcher_off
on_timer = 500 | %=stop_play_snd_from_obj(5113:ambient\transformer_hum1) =turn_off(5120) =turn_off(5121) =turn_off(5180) =turn_off(5184)% ph_button@deactivate2

[ph_button@deactivate2]
