[logic]
active = ph_door@locked

[ph_door@locked]
closed = true
locked = true
snd_open_start = trader_door_unlock
on_info = {+esc_open_door -esc_sid_guard_fire} ph_door@open %=play_snd(device\door_servomotor)%

[ph_door@closed]
closed = true
locked = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop

[ph_door@open]
closed = false
locked = false
on_info = {+esc_sid_guard_fire} ph_door@locked %=play_snd(device\door_servomotor)  +esc_closed_door%
on_info2 = {+esc_closed_door} ph_door@locked %=play_snd(device\door_servomotor)%

