[example]			; описание параметров
sound = sound_die		; движковый айди звука (из stalker_ids); Для проигрывания стандартных движковых фраз
path = fight\fire\fire_		; путь к набору фраз
idle = 20,40,80			; минимальная пауза между фразами, максимальная пауза, вероятность воспроизведения
avail_communities = stalker, dolg	; список группировок, для которых доступна озвучка ; по умолчанию разрешено для всех
delay_sound = 1			; задержка проигрывания звука в секундах ; минимальная, максимальная
npc_prefix = false		; использовать префикс персонажа в пути к звуку, по умолчанию true
shuffle = seq			; способ выбора звука: rnd - случайно, seq - последовательно, loop - последовательно с повторением ; по умолчанию rnd
group_snd = true		; групповой звук - может говорить только 1 персонаж одновременно
pda_snd = true			; проигрывать также звук по рации для игрока, если есть
type = talk			; тип звука (snd_type), определяет реакцию персонажей, по умолчанию monster_talk


