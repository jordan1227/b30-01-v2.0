[amk_metka]
habar_list_mode		= true	; вкл\выкл режима работы маячка на отображение списка хабара при помещении его тайник. Собственно выключатель всего аддона.

show_quantity		= true	; показывать кол-во хабара.
update_on_time		= true	; обновлять список на плане каждые 3 минуты (игровые)
color_and_sort_list	= true  ; сортировать и раскрашивать список с хабаром

activity_time		= 168	; время работы маячка без подзарадяки (в часах). 0 - позрадяка не требуется.
warning_time		= 10	; за сколько часов предупреждать сообщением о разрядке батарей. 0 - не предупреждать.
warning_icons_time	= 3	; за сколько часов до разрядки батарей менять на плане цвет иконки тайника на красный. 0 - не менять.
auto_recharge		= false	; при обмене вещами с тайником, подзарежать батареи маячка. Иначе для подзарядки необходимо маячок переставить.

set_label_on_npc	= true	; ставить-ли метку на NPC при продаже ему маячка.
show_health		= false	; показывать на плане состояние помеченного сталкера (жив\погиб).
warning_on_death	= false	; предупреждать при гибели помеченного сталкера

