blowout_time		= 80	
accamulate_time		= 80
blowout_light_time	= 100
blowout_explosion_time	= 100
blowout_particles_time	= 100
blowout_sound_time  	= 100
disable_time		= 100	
disable_time_small	= 100	
disable_idle_time	= 100	

;--/игнорирование
ignore_nonalive		= true
ignore_small		= true
ignore_artefacts	= true

;--/освещение
blowout_light		= off
light_color		= 0.5,0.4,0.3
light_range		= 30.0
light_time 	        = 0.9
light_height		= 1.5
idle_light		= off
visible_by_detector     = off

;--/рождение артефактов 
BirthProbability	= 0
artefacts               = af_blood,0.7, af_mincer_meat, 0.25,af_soul, 0.05
spawn_blowout_artefacts = off
artefact_spawn_probability = 0.09				;вероятность, что во время срабатывания аномалии будет рожден артефакт
artefact_spawn_particles = anomaly2\pux_blast
artefact_born_sound     =  anomaly\pux_blast
throw_out_power         = 50
artefact_spawn_height   = 2

;--/ ветер
blowout_wind		    = off
blowout_wind_time_start     = 0
blowout_wind_time_peak      = 50
blowout_wind_time_end	    = 101
blowout_wind_power	    = 0.5


