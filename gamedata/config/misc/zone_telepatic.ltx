[zone_psi_field]
GroupControlSection	= spawn_group_zone
$spawn 			= "zones\zone_psi_field"
$prefetch 		= 16
class			= ZS_MBALD
script_binding = amk_anoms.bind
hit_impulse_scale	= 0.3
effective_radius	= 0.85
actor_blowout_radius_percent= 0.75
ef_anomaly_type		= 1
ef_weapon_type		= 13
sound			= zone_mosquito_bald

;--/урон
hit_type		= telepatic
min_start_power		= 0.0
max_start_power		= 0.35
attenuation		= 1
period			= 1
min_artefact_count	= 0
max_artefact_count	= 0

;--/партиклы
idle_particles		= anomaly2\control_monolit_holo
blowout_particles	= anomaly2\zone_psi_blowout

;--/звуки
idle_sound		= ambient\fx2
blowout_sound		= ambient\fx2
hit_sound		= ambient\fx2
entrance_sound		= ambient\fx2

;--/продолжительность этапов
