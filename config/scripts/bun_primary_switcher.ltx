[logic]
active = ph_button@deactive

[ph_button@deactive]
anim = lab_primary_switcher_off
tooltip = bun_switcher_press
on_info={+bun_lamp_1_off} ph_button@deactivate2
on_info2={+bun_lamp_1_on} ph_button@activate2
on_press = ph_button@activate  %=play_snd_from_obj(3190:ambient\switch_1)%

[ph_button@activate]
anim = lab_primary_switcher_idle 
on_timer = 500 | %=turn_on_lamp_bun =turn_off(3161)% ph_button@activate2

[ph_button@activate2]
anim = lab_primary_switcher_idle 
tooltip = bun_switcher_press
on_timer = 1000 |%=play_snd_from_obj(3190:ambient\transformer_hum1)%
on_press = ph_button@deactivate  %=play_snd_from_obj(3190:ambient\switch_1) +bun_lamp_1_off%

[ph_button@deactivate]
anim = lab_primary_switcher_off
on_timer = 500 | %=turn_off_lamp_bun =stop_play_snd_from_obj(3190:ambient\transformer_hum1)% ph_button@deactivate2

[ph_button@deactivate2]
anim = lab_primary_switcher_off
tooltip = bun_switcher_press
on_press = ph_button@activate  %=play_snd_from_obj(3190:ambient\switch_1) +bun_lamp_1_on%